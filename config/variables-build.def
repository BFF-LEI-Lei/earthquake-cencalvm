BLD_BINDIR = $(BLD_ROOT)/bin
BLD_LIBDIR = $(BLD_ROOT)/lib
BLD_INCDIR = $(BLD_ROOT)/include
BLD_TMPDIR = $(BLD_ROOT)/tmp


PROJ_BINDIR = $(BLD_BINDIR)
PROJ_LIBDIR = $(BLD_LIBDIR)
PROJ_TMPDIR = $(BLD_TMPDIR)/$(PROJECT)
PROJ_INCDIR = $(BLD_INCDIR)/$(PROJECT)

PROJ_TIDY = core *~ .*~ *.bak
PROJ_CLEAN = $(PROJ_OBJS) $(PROJ_TIDY)

RECURSE = \
    for x in $(SUBPACKAGES); do { \
        if [ -d $$x ]; then { \
            (cd $$x; $(MM) $(BLD_ACTION) || exit 1; ) \
        } else { \
            echo "Subdirectory $$x not found"; \
        } fi \
    } done

